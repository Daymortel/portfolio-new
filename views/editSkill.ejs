<!DOCTYPE html>
<html lang="fr">
<%- include('./includes/head.ejs'); %>
<body>
    <%- include('./includes/sidebar.ejs'); %>
    <main>
        <section>
            <div class="box">
                <h2>Modifier une compétence</h2>
                <br />
                <form action="/skill/update/<%= id %>?_method=put" method="post">
                    <% skills.forEach(e => { %>
                    <label for="skill">Nom de la compétence</label>
                    <input type="text" name="skill" value="<%= e.skill %>" required>
                    <br />
                    <label for="percent">Pourcentage maîtrisé</label>
                    <input type="number" name="percent" value="<%= e.percent %>" required>
                    <% }) %>
                    <br />
                    <button type="submit" class="submit">Modifier</button>
                </form>
            </div>
        </section>
    </main>
    <%- include('./includes/footer.ejs'); %>
</body>
</html>
