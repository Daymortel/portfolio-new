<!DOCTYPE html>
<html lang="fr">
<%- include('./includes/head.ejs'); %>
<body>
    <%- include('./includes/sidebar.ejs'); %>
    <main>
        <section>
            <div class="box">
                <h2>Modifier un diplôme</h2>
                <br />
                <form action="/study/update/<%= id %>?_method=put" method="post">
                    <% studies.forEach(e => { %>
                    <label for="study">Diplôme obtenu</label>
                    <input type="text" name="study" value="<%= e.study %>" required>
                    <br />
                    <label for="year">Année d'obtention</label>
                    <input type="text" name="year" value="<%= e.year %>" required>
                    <% }) %>
                    <br />
                    <button type="submit" class="submit">Modifier</button>
                </form>
            </div>
        </section>
    </main>
    <%- include('./includes/footer.ejs'); %>
</body>
</html>
